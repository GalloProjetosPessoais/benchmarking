<div class="row">
    <form class="col-sm-12 bg-secondary" method="post" action="/grupos/upsert/<%= grupo.id %>">
        <input type="hidden" id="id" name="id" value="<%= grupo.id %>" >
        <div class="row">
            <div class="form-group col-sm-12 col-md-10">
                <label for="descricao">Nome</label>
                <input type="text" id="descricao" name="descricao" value="<%= grupo.descricao %>" required>
            </div>
            <div class="form-checked col-sm-12 col-md-2">
                <input type="checkbox" id="ativo" name="ativo" value=<%= grupo.ativo %> <%= grupo.ativo ? 'checked' : 'unchecked' %>>
                <label for="ativo">Ativo</label>
            </div>
        </div>

        <div class="row my-10 px-10 g-10">
            <button class="btn btn-primary mt-10" type="submit">
                <i class='bx bxs-save'></i> Salvar
            </button>
            <a class="btn btn-danger mt-10" href="/grupos">
                <i class='bx bx-x'></i> Cancelar
            </a>
        </div>
    </form>
</div>