<div class="row">
  <a class="btn btn-primary" href="/safras/upsert/0">
    <i class="bx bx-plus-circle"></i>
    Adicionar Safra
  </a>
</div>
<div class="row mt-10">
  <div class="col-sm-12 bg-secondary">
    <% if (data) { %>
    <table id="table" class="display d-none" style="width: 100%">
      <thead>
        <th>Ano</th>
        <th>Ativo</th>
        <th>Ações</th>
      </thead>
      <tbody>
        <% data.forEach(item=> { %>
        <tr>
          <td><%= item.ano %></td>
          <td>
            <% if (item.ativo) { %>
            <i class="bx bxs-check-circle fs-20 text-primary" alt="Ativo"></i>
            <% } else { %>
            <i class="bx bxs-x-circle fs-20 text-warning" alt="Desativado"></i>
            <% } %>
          </td>
          <td class="fit">
            <a
              href="/safras/empresas/<%= item.id %>"
              class="bx bxs-business"
              title="Gerenciar Empresas"
            ></a>
            <a
              href="/safras/periodos/<%= item.id %>"
              class="bx bx-calendar"
              title="Gerenciar Períodos"
            ></a>
            <!-- <a
              href="/safras/upsert/<%= item.id %>"
              class="bx bx-edit"
              title="Alterar Safra"
            ></a> -->
            <% if (item.ativo) { %>
            <a
              class="btn-sm btn-danger mx-10"
              href="/safras/ativar/<%= item.id %>"
              >Desativar</a
            >
            <% } else { %>
            <a
              class="btn-sm btn-primary mx-10"
              href="/safras/ativar/<%= item.id %>"
              >Ativar</a
            >
            <% } %>
            <a
              href="javascript:void(0)"
              onclick="Delete('/safras/delete/<%= item.id %>')"
              title="Excluir Safra"
              class="bx bxs-trash"
            ></a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>Sem dados para exibir</p>
    <% } %>
  </div>
</div>
