<div class="row">
  <!-- <a class="btn btn-primary" href="/periodos/0">
    <i class='bx bx-plus-circle'></i>
    Gerar Per√≠odos
  </a> -->
  <a class="btn btn-primary" href="/periodos/0">
    <i class='bx bx-check-double'></i>
    Ativar/Desativar Todos
  </a>
</div>

<div class="row mt-10">
  <div class="col-sm-12 bg-secondary">

    <% if (data.length==0) { %>
      <p></p>
    <% } %>

    <table id="table" style="width: 100%;">
      <thead>
        <th>Grupo</th>
        <th>Empresa</th>
        <th>Safra</th>
        <th>Data Inicial</th>
        <th>Data Final</th>
        <th>Ativo</th>
      </thead>
      <tbody>
        <% data.forEach(item=> { %>
          <tr>
            <td>
              <%= item.grupo %>
            </td>
            <td>
              <%= item.empresa %>
            </td>
            <td>
              <%= item.anoSafra %>
            </td>
            <td>
              <%= new Date(item.dataInicio).toLocaleDateString('pt-BR') %>
            </td>
            <td>
              <%= new Date(item.dataFim).toLocaleDateString('pt-BR') %>
            </td>
            <td>
              <% if (item.ativo) { %>
                <div class="d-flex-row">
                  <i class="bx bxs-check-circle fs-20 text-primary"></i>
                  <a class="btn-sm btn-danger mx-10" href="/empresasSafras/desativar/<%= item.id %>">Desativar</a>
                </div>
              <% } else { %>
                <div class="d-flex-row">
                  <i class="bx bxs-x-circle fs-20 text-warning"></i>
                  <a class="btn-sm btn-primary mx-10" href="/empresasSafras/ativar/<%= item.id %>">Ativar</a>
                </div>
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>